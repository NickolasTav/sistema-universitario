@model Sistema.Universitario.Application.ViewModels.CursoViewModel

@{
    ViewData["Title"] = "Remover Curso";
}

<h1>Remover Curso</h1>

<h3>Tem certeza que deseja remover o curso '@Model.Nome'?</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Remover</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
