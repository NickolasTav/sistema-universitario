@model IEnumerable<Sistema.Universitario.Application.ViewModels.CursoViewModel>

@{
    ViewData["Title"] = "Cursos";
}

<div class="page-header">
    <h1>Cursos</h1>
    <div class="controls-row">
        <a class="btn btn-primary" asp-action="Create">Criar novo curso</a>
        <div class="ms-3">
            <input id="searchBox" class="form-control" placeholder="Buscar cursos por nome..." />
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/search.js" asp-append-version="true"></script>
    <script>appSearch.attach('Cursos');</script>
}

<div class="cards-grid">
@foreach (var item in Model)
{
    <div class="card-custom">
        <div>
            <div class="card-title-custom">@item.Nome</div>
        </div>
        <div class="card-actions">
            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
            <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Remover</a>
        </div>
    </div>
}
</div>
