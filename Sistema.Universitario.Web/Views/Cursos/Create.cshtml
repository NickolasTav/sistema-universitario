@model Sistema.Universitario.Application.ViewModels.CursoViewModel

@{
    ViewData["Title"] = "Criar Curso";
}

<h1>Criar Curso</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

<div class="mt-3 alert alert-info">
    Após criar o curso você será redirecionado para adicionar ao menos uma disciplina (Disciplina é obrigatória para um curso funcionar).
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
