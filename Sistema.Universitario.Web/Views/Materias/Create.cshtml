@model Sistema.Universitario.Application.ViewModels.MateriaViewModel

@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Criar Disciplina";
}

<h1>Criar Disciplina</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CursoId">Curso</label>
        <select asp-for="CursoId" class="form-control" asp-items="(SelectList)ViewBag.Cursos" required>
            <option value="">-- Selecione um curso --</option>
        </select>
        <span asp-validation-for="CursoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProfessorId">Professor</label>
        <select asp-for="ProfessorId" class="form-control" asp-items="(SelectList)ViewBag.Professores">
            <option value="">-- (opcional) --</option>
        </select>
        <span asp-validation-for="ProfessorId" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
