@model IEnumerable<Sistema.Universitario.Application.ViewModels.MateriaViewModel>

@{
    ViewData["Title"] = "Disciplinas";
}

<div class="page-header">
    <h1>Disciplinas</h1>
    <div class="controls-row">
        <a class="btn btn-primary" asp-action="Create">Criar nova disciplina</a>
    </div>
</div>

<div class="cards-grid">
@foreach (var item in Model)
{
    @await Html.PartialAsync("_EntityCard", item)
}
</div>
