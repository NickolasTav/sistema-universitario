@model Sistema.Universitario.Application.ViewModels.AlunoViewModel

@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Criar Aluno";
}

<h1>Criar Aluno</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Matricula"></label>
        <input asp-for="Matricula" class="form-control" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CursoId">Curso</label>
        <select asp-for="CursoId" class="form-control" asp-items="(SelectList)ViewBag.Cursos" required>
            <option value="">-- Selecione um curso --</option>
        </select>
        <span asp-validation-for="CursoId" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
